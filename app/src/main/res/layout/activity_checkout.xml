<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fillViewport="true"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#F5F5F5">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="12dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Informasi Pengguna -->
                <TextView
                    android:text="ðŸ‘¤ Informasi Pengguna"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#263238"
                    android:layout_marginBottom="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvNama"
                    android:text="Nama: -"
                    android:textColor="#455A64"
                    android:textSize="15sp"
                    android:layout_marginBottom="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvAlamat"
                    android:text="Alamat: -"
                    android:textColor="#455A64"
                    android:textSize="15sp"
                    android:layout_marginBottom="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvTelp"
                    android:text="Telepon: -"
                    android:textColor="#455A64"
                    android:textSize="15sp"
                    android:layout_marginBottom="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvKodepos"
                    android:text="Kode Pos: -"
                    android:textColor="#455A64"
                    android:textSize="15sp"
                    android:layout_marginBottom="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!-- Provinsi -->
                <TextView
                    android:text="Pilih Provinsi Tujuan"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#263238"
                    android:layout_marginBottom="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <Spinner
                    android:id="@+id/spinnerProvinsi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:backgroundTint="#BBDEFB" />

                <!-- Kota -->
                <TextView
                    android:text="Pilih Kota Tujuan"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#263238"
                    android:layout_marginBottom="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <Spinner
                    android:id="@+id/spinnerKota"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:backgroundTint="#BBDEFB" />

                <!-- Produk -->
                <TextView
                    android:text="Produk yang Dibeli"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#263238"
                    android:layout_marginBottom="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:id="@+id/layoutProduk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp" />

                <!-- Pembayaran -->
                <TextView
                    android:text="Pilih Metode Pembayaran"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#263238"
                    android:layout_marginBottom="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <RadioGroup
                    android:id="@+id/radioGroupPembayaran"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <RadioButton
                        android:id="@+id/radioCOD"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="COD"
                        android:textColor="#455A64" />

                    <RadioButton
                        android:id="@+id/radioTransfer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Transfer"
                        android:layout_marginStart="32dp"
                        android:textColor="#455A64" />
                </RadioGroup>

                <!-- Ongkir -->
                <TextView
                    android:id="@+id/tvOngkir"
                    android:text="ðŸšš Ongkos Kirim: Rp0"
                    android:textColor="#455A64"
                    android:textSize="15sp"
                    android:layout_marginBottom="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!-- Estimasi -->
                <TextView
                    android:id="@+id/tvEstimasi"
                    android:text="â³ Estimasi Pengiriman: -"
                    android:textColor="#455A64"
                    android:textSize="15sp"
                    android:layout_marginBottom="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!-- Total Bayar -->
                <TextView
                    android:id="@+id/tvTotalBayar"
                    android:text="Total Bayar: Rp0"
                    android:textColor="#D32F2F"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginBottom="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!-- Tombol Checkout -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnProsesCheckout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ›’ Proses Checkout"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    app:cornerRadius="24dp"
                    app:backgroundTint="#2196F3"
                    android:elevation="6dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
