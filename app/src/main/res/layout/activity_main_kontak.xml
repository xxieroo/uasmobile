<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4"
    tools:context=".MainKontak">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:padding="24dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="10dp"
            app:cardBackgroundColor="#ffffff">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvKontakTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kontak Toko"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginBottom="12dp" />

                <!-- Maps -->
                <LinearLayout
                    android:id="@+id/layoutMaps"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/maps"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/tvMaps"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Location: Jl. Karang Anyar No.13, Brumbungan, Kec. Semarang Tengah, Kota Semarang"
                        android:textColor="@android:color/holo_blue_dark" />
                </LinearLayout>

                <!-- Instagram -->
                <LinearLayout
                    android:id="@+id/layoutInstagram"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/instagram"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/tvInstagram"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Instagram: @dexttech"
                        android:textColor="@android:color/holo_blue_dark" />
                </LinearLayout>

                <!-- Tokopedia -->
                <LinearLayout
                    android:id="@+id/layoutTokopedia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/tokopedia"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/tvTokopedia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tokopedia: DEXTsemarang"
                        android:textColor="@android:color/holo_blue_dark" />
                </LinearLayout>

                <!-- TikTok -->
                <LinearLayout
                    android:id="@+id/layoutTikTok"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/tiktok"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/tvTikTok"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TikTok: @dext.tech"
                        android:textColor="@android:color/holo_blue_dark" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>
